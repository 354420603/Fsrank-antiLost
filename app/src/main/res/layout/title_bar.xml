<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <FrameLayout
        android:id="@+id/fly_left_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >
        <ImageButton
            android:id="@+id/ib_title_left_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="30dp"
            android:minWidth="48dp"
            android:padding="0dp"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView android:id="@+id/tv_title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="14sp"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fly_right_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >
        <ImageButton
            android:id="@+id/ib_title_right_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="30dp"
            android:minWidth="48dp"
            android:padding="0dp"
            android:visibility="gone"
            tools:visibility="visible" >
        </ImageButton>
        <TextView android:id="@+id/tv_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="14sp"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_title_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"  >
    </FrameLayout>

</merge>